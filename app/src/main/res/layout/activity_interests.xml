<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interests"
    android:background="@color/merahp2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/merahp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/batt"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@drawable/abc_vector_test"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interests"
                    android:layout_marginStart="14dp"
                    android:textColor="#FFFFFF"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:fontFamily="@font/p5hatty"
                    android:textSize="28dp"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/judul"
            android:textSize="28dp"
            android:layout_marginBottom="36dp"
            android:textAlignment="center"
            android:textColor="@color/putih"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            android:fontFamily="@font/p5hatty"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hobby : Games, Coding "
            android:textAlignment="center"
            android:textColor="@color/putih"
            android:fontFamily="@font/p5hatty"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Makes : Pizza,Shihlin"
            android:textAlignment="center"
            android:textColor="@color/putih"
            android:fontFamily="@font/p5hatty"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Mikes : Thaitea"
            android:textAlignment="center"
            android:textColor="@color/putih"
            android:fontFamily="@font/p5hatty"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Interest : Women"
            android:textAlignment="center"
            android:textColor="@color/putih"
            android:fontFamily="@font/p5hatty"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Cita-Cita : Profesional Programmer, IT Security"
            android:textAlignment="center"
            android:textColor="@color/putih"
            android:fontFamily="@font/p5hatty"
            android:textSize="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>